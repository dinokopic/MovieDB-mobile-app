<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.example.android.moviedb.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview">
        <action
            android:id="@+id/action_overviewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.android.moviedb.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="selectedMedia"
            app:argType="com.example.android.moviedb.Media" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.android.moviedb.MainFragment"
        android:label="TMDB">
        <action
            android:id="@+id/action_show_details"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>